# Timezone Configuration
TZ=America/Chicago

# n8n Configuration
N8N_HOST=n8n.rensto.com
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=rensto
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_BASIC_AUTH_PASSWORD
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=CHANGE_ME_64_CHAR_RANDOM_STRING_FOR_ENCRYPTION

# PostgreSQL Configuration (for n8n)
POSTGRES_USER=rensto
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_16_CHARS_MIN
POSTGRES_DB=n8n

# MongoDB Configuration (for app data)
MONGO_ROOT_USER=rensto
MONGO_ROOT_PASS=CHANGE_ME_MONGO_ROOT_PASSWORD

# MongoDB Connection String (for reference)
# MONGODB_URI=mongodb://rensto:CHANGE_ME_MONGO_ROOT_PASSWORD@mongo:27017/?authSource=admin

# Cloudflare Tunnel (set after creation)
# TUNNEL_ID=your-tunnel-id-here
# TUNNEL_NAME=rensto-tunnel

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=CHANGE_ME_BACKUP_ENCRYPTION_KEY

# Optional: External Services
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# AIRTABLE_API_KEY=your-airtable-api-key
# AIRTABLE_BASE_ID=appQijHhqqP4z6wGe

# Optional: Monitoring
# ROLLBAR_ACCESS_TOKEN=your-rollbar-token
# SENTRY_DSN=your-sentry-dsn
